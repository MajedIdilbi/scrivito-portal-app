{
  "name": "scrivito-portal-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "types": "tsc",
    "preview": "vite preview",
    "lint": "eslint --max-warnings 0 'src/**/*.ts' 'src/**/*.tsx' && knip",
    "lighthouse": "SCRIVITO_ORIGIN=http://localhost:8080 PRERENDER_OBJ_ID=c2a0aab78be05a4e npm run prerender && npm run prerender-precompress && for run in $(seq 6); do lhci autorun && break; done",
    "prerender": "vite build && vite-node --options.deps.external='/scrivito/' src/prerenderContent.ts",
    "prerender-precompress": "precompress --include '(**).(css|html|js)' --types br dist-ssr",
    "prerender-preview": "ws",
    "prettier": "prettier --check .",
    "start-design": "vite --config design/vite-design.config.ts",
    "start": "vite",
    "test": "jest --verbose  --runInBand",
    "test-coverage": "jest --verbose --coverage",
    "watch-test": "jest --watchAll",
    "all-tests": "npm run test"
  },
  "dependencies": {
    "@justrelate/jr-ui-components": "^0.0.25-delta",
    "color": "^4.2.3",
    "highlight-words-core": "^1.2.2",
    "history": "^5.3.0",
    "lodash-es": "^4.17.21",
    "pretty-bytes": "^6.1.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.4",
    "react-color-palette": "^7.2.2",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.4.6",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.53.0",
    "react-toastify": "^10.0.5",
    "scrivito": "^1.44.0-rc2",
    "scrivito-neoletter-form-widgets": "^0.0.19",
    "scroll-to-fragment": "^1.0.12",
    "speakingurl": "^14.0.1"
  },
  "devDependencies": {
    "@arabasta/eslint-plugin-require-useeffect-dependency-array": "^1.0.9",
    "@cloudflare/workers-types": "^4.20240729.0",
    "@lhci/cli": "^0.14.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/color": "^3.0.6",
    "@types/highlight-words-core": "^1.2.3",
    "@types/jest": "^29.5.12",
    "@types/jsontoxml": "^1.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.0.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "@types/speakingurl": "^13.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "bootstrap-icons": "^1.11.3",
    "content-security-policy-builder": "^2.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "hash-wasm": "^4.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsontoxml": "^1.0.1",
    "knip": "^5.27.0",
    "local-web-server": "^5.4.0",
    "precompress": "^12.0.5",
    "prettier": "^3.3.3",
    "react-test-renderer": "^18.3.1",
    "sass": "^1.77.6",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-node": "^2.0.5"
  },
  "overrides": {
    "@lhci/cli": {
      "rimraf": "3"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup-tests.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1"
    }
  }
}
